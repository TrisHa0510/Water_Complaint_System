@{
    ViewData["Title"] = "Welcome";
}

<div class="container mt-5">
    <h1 class="display-4">Welcome to Water Complaint System</h1>
    <p class="lead">This system helps citizens report and track water supply issues efficiently.</p>
    
    <div class="mt-4">
        <h3>Features:</h3>
        <ul class="list-group">
            <li class="list-group-item">File water supply complaints online</li>
            <li class="list-group-item">Track complaint status in real-time</li>
            <li class="list-group-item">Upload photos of water issues</li>
            <li class="list-group-item">Filter complaints by ward, status, and priority</li>
            <li class="list-group-item">Municipal workers can resolve complaints</li>
        </ul>
    </div>

    <!-- Practical 4: Navigation back to home -->
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-primary">Back to Home</a>
    </div>
</div>
